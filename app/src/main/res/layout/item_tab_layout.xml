<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_tablayout"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_tab_icon"
        android:layout_width="@dimen/size_35"
        android:layout_height="@dimen/size_35"
        android:src="@drawable/ic_video" />


    <TextView
        android:id="@+id/text_tab_name"
        app:layout_constraintTop_toBottomOf="@id/img_tab_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_9"
        android:textColor="@color/white_menubar_text"
        android:text="@string/tab_video"/>

</android.support.constraint.ConstraintLayout>